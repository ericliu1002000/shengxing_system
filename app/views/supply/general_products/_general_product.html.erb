<div class="row">
  <div class="col-sm-1 text-right">
    <label>通用产品名称</label>
  </div>
  <div class="col-sm-11">
    <%= text_field_tag 'name', @general_product.name %>
  </div>
</div>
<div class="row">
  <div class="col-sm-1 text-right">
    <label>选择卖货人</label>
  </div>
  <div class="col-sm-11">
    <%= select_tag 'seller_id', options_from_collection_for_select( @sellers, 'id', 'name', (@seller.id rescue '')) %>
  </div>
</div>
<div class="row">
  <div class="col-sm-2 col-sm-offset-1 end text-left">
    <%= submit_tag '保存', class: 'btn btn-primary' %>
  </div>
</div>