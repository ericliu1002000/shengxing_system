<script language="javascript">
    $("#order_id").focusout(
            function() {
                var id = $("#order_id").val();
                var re = /^[1-9]+[0-9]*]*$/;
                if (re.test(id)) {
                    $("#jump_order").attr("href", "/supply/orders/"+id+"/edit");}
                else {
                    alert("ID必须是正整数");}
            }
    );
    function jump_specified_order(){
        var id = $("#order_id").val();
        $.ajax({
            type: 'post',
            url: "/supply/orders/"+id+"/edit",
            dataType: 'html',
            success: function(html)
            {
                $("body").html(html);
            }
        });
    }
</script>